<UserControl x:Class="SequenceClicker.View.SequenceController"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SequenceClicker.View"
             xmlns:CControl="clr-namespace:SequenceClicker.CustomControl"  
             mc:Ignorable="d"             
             Background="{StaticResource DarkerGray}"
             PreviewMouseLeftButtonDown="Ctrl_PreviewMouseLeftButtonDown"
             PreviewMouseRightButtonDown="Ctrl_PreviewMouseRightButtonDown"
             MouseEnter="Ctrl_MouseEnter"
             MouseLeave="Ctrl_MouseLeave"
             Width="250" Height="25" >
    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <CControl:MButton Grid.Column="0" x:Name="sButton" Text="Stop" Height="25" Width="50" OnClick="MButton_OnClick"/>
        <CControl:MButton Grid.Column="1" x:Name="mButton" Text="Start" Height="25" Width="75" OnClick="MButton_OnClick"/>
        <CControl:MButton Grid.Column="2" x:Name="rButton" Text="Restart" Height="25" Width="75" OnClick="MButton_OnClick"/>
    </Grid>
</UserControl>
