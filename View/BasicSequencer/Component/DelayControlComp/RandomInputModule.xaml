             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SequenceClicker.View.BasicSequencer.Component"
             mc:Ignorable="d" 
             Width="120" Height="52">
    <Grid Grid.Row="2">
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>

        <Rectangle Fill="White" Grid.ColumnSpan="2" Height="1.5" Width="10" Margin="55,19,55,31"/>

        <local:DelayInputControl x:Name="RInputCtrl1" Grid.Column="0" Margin="-5 0 0 0"/>
        <local:DelayInputControl x:Name="RInputCtrl2" Grid.Column="1" Margin="0 0 -5 0"/>
    </Grid>
</UserControl>
