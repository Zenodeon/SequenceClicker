<UserControl x:Class="SequenceClicker.View.BasicSequencer.Component.DelayInputControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SequenceClicker.View.BasicSequencer.Component"
             xmlns:CControl="clr-namespace:SequenceClicker.CustomControl"           
             mc:Ignorable="d" 
             Width="40" Height="52">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="6"/>
            <RowDefinition/>
            <RowDefinition Height="12"/>
        </Grid.RowDefinitions>

        <Viewbox Grid.Row="1" Stretch="Uniform">
            <TextBox Text="0" Padding="{StaticResource NumericTextOffset}" CaretBrush="#FF909090" PreviewTextInput="OnPreviewTextInput"  DataObject.Pasting="OnTextBoxPasting" TextAlignment="Center" VerticalAlignment="Center" Foreground="White"  BorderThickness="0" Background="Transparent" FontFamily="Segoe UI"/>
        </Viewbox>

        <CControl:MButton x:Name="TimeModeSwitch" Text="ms" Width="40" Height="12" BarSize="2" Grid.Row="2" OnClick="OnTimeModeSwitch"/>
    </Grid>
</UserControl>
