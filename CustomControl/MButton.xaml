<UserControl x:Class="SequenceClicker.CustomControl.MButton"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SequenceClicker.CustomControl"
             x:Name="root"
             mc:Ignorable="d"
             MouseEnter="OnMouseEnter"
             MouseLeave="OnMouseLeave"
             PreviewMouseDown="OnPreviewMouseDown"
             PreviewMouseUp="OnPreviewMouseUp"
             Width="80" Height="30">
    <Grid>
        <Rectangle x:Name="Bar" Fill="DarkViolet" Opacity="0" Height="{Binding BarSize, ElementName=root}" VerticalAlignment="Bottom" Width="{Binding ActualWidth, ElementName=TextHolder, Mode=OneWay}"/>
        <Viewbox x:Name="TextHolder">
            <TextBlock Text="{Binding Text, ElementName=root}" Margin="{StaticResource TextOffset}" Foreground="White"/>
        </Viewbox>
    </Grid>
</UserControl>
